{{#if loggedIn }}
<div class="main-container">  <!-- Create post -->
        <div class="row">
            <div class="col l3 s12"></div>
            <div class="col l6 s12">
                <div class="card z-depth-3">
                    <div class="center log-sign-title">
                        <span >Create New Post</span>
                    </div>  
                    <form class="card-content form-container">
                        <div class="row">
                            <div class="input-field col s12">
                                <span class="prefix"></span>
                                <textarea id="title" class="materialize-textarea"></textarea>
                                <label for="title">Title</label>
                            </div>
                            <div class="input-field col s12">
                                <span class="prefix"></span>
                                <textarea id="body" class="materialize-textarea"></textarea>
                                <label for="body">Body</label>
                            </div>
                            <div class="col s12 center-align">
                                <button id="submitPost"class="btn waves-effect waves-light align-center green-btn" type="submit">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
</div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src = "https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script src="/js/add-post.js"></script>
    {{else}}
        <div class="main-container"> 
        <div class="btn-container">
            <h4>You can create posts when you log in.</h4>
            <a class="d-link" href="/login">Log in here!</a>
        </div>
        </div>

{{/if}}