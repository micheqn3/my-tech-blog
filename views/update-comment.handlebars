<div class="single-container">  <!-- Update comment screen. Can update or delete comment  -->
        <div class="row">
            <div class="col l3 s12"></div>
            <div class="col l6 s12">
                <div class="card z-depth-3">
                    <div class="center log-sign-title">
                        <span >Update Comment</span>
                    </div>  
                    <form class="card-content form-container">
                        <div class="row">
                            <div class="input-field col s12">
                                <span class="prefix"></span>
                                <textarea id="body" class="materialize-textarea">{{posts.body}}</textarea>
                                <label for="body">Body</label>
                            </div>
                            <div class="col s12 center-align">
                                <button id="updateComment"class="btn waves-effect waves-light align-center green-btn" type="submit">Update</button>
                                <button id="deleteComment"class="btn waves-effect waves-light align-center green-btn" type="submit">Delete</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
</div>
